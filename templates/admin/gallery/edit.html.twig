{% extends 'admin.base.html.twig' %}

{% block title %}Modifier une gallery{% endblock %}

{% block page_title %}Modifier la gallery « {{ gallery.title }} »{% endblock %}

{% block breadcrumb %}
    {% include '_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Gallery', path: path('app_gallery_index') },
            { label: 'Modifier' }
        ]
    } %}
{% endblock %}

{% block content %}
    <h2 class="h5 mb-4">Édition de la Gallery</h2>

    {{ include('admin/gallery/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <div class="d-flex gap-2 mt-3">
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>

        {{ include('admin/gallery/_delete_form.html.twig') }}
    </div>
{% endblock %}
