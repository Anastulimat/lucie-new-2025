{{ form_start(form, { attr: { id: 'gallery-form' } }) }}

<div class="mb-3">
    {{ form_row(form.title) }}
</div>

<div class="mb-3">
    {{ form_widget(form.slugAuto, { attr: { class: 'form-check-input', id: 'slugAutoSwitch' } }) }}
</div>

<div class="mb-3">
    {{ form_row(form.slug) }}
</div>

<div class="mb-3">
    {{ form_row(form.description) }}
</div>

<div class="mb-3">
    {{ form_row(form.category) }}
</div>

<div class="mb-3">
    {{ form_row(form.featuredImageFile) }}
</div>

{#<div class="mb-3">
    <img src="{{ vich_uploader_asset(gallery.featuredImage, 'imageFile') | imagine_filter('thumb') }}" width="100" alt="Image">
</div>#}

<div class="mb-3">
    {{ form_row(form.imagesFiles) }}
</div>

<div class="mb-3">
    <div class="row flex justify-content-start flex-wrap" id="gallery-images">
        {% for image in gallery.images %}
            <div class="col image-container" style="width: 100px; flex: none; margin: 5px;" data-image-id="{{ image.id }}">
                <img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('thumb') }}" width="100" alt="Image">

                <form method="post" action="{{ path('app_image_delete', {'id': image.id}) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                    <button class="btn btn-danger">
                        <i class="bi bi-trash3"></i>
                        Delete
                    </button>
                </form>
            </div>
        {% endfor %}
    </div>
</div>



<button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
