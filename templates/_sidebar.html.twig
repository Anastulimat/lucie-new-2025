<div class="position-sticky">
    <div class="sidebar-header text-center py-3">
        <a href="{{ path('app_dashboard') }}" class="text-white text-decoration-none">
            <h4 class="m-0">Lucie Sassiat Admin</h4>
        </a>
    </div>
    <hr class="text-secondary">
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link text-white {% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}"
               href="{{ path('app_dashboard') }}">
                <i class="bi bi-house-door"></i> Dashboard
            </a>
        </li>
        <hr class="text-secondary">
        {% block sidebar %}
            <li class="nav-item">
                <a class="nav-link text-white {% if app.request.attributes.get('_route') == 'app_category_index' %}active{% endif %}"
                   href="{{ path('app_category_index') }}">
                    <i class="bi bi-image"></i> Categories
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white {% if app.request.attributes.get('_route') == 'app_gallery_index' %}active{% endif %}"
                   href="{{ path('app_gallery_index') }}">
                    <i class="bi bi-images"></i> Galleries
                </a>
            </li>
        {% endblock %}

        <hr class="text-secondary">

        <!-- Lien vers le site web front -->
        <li class="nav-item">
            <a class="nav-link text-white" href="{{ path('app_home') }}" target="_blank">
                <i class="bi bi-globe"></i> Voir le site web
                <i class="bi bi-box-arrow-up-right ms-1" style="font-size: 0.8em;"></i>
            </a>
        </li>

        <!-- Lien de déconnexion -->
        <li class="nav-item">
            <a class="nav-link text-danger" href="{{ path('app_logout') }}">
                <i class="bi bi-box-arrow-right"></i> Déconnexion
            </a>
        </li>
    </ul>
</div>